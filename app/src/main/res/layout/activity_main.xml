<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panchamkhaitan.svfitness.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/intro"
        android:scaleType="centerCrop"
        android:tintMode="multiply"
        android:tint="#dedede"
        android:alpha="0.5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SV Fitness Club"
        android:id="@+id/head"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:fontFamily="@string/abc_font_family_headline_material"
        android:singleLine="false"
        android:linksClickable="true"
        android:backgroundTintMode="add"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="138dp"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L O G I N"
        android:id="@+id/button"
        android:onClick="login"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="visible"
        android:fontFamily="@string/abc_font_family_button_material"
        android:layout_alignParentBottom="true"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="16sp"
        android:padding="20dp" />

</RelativeLayout>
